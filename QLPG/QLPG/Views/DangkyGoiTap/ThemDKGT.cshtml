@model QLPG.ViewModel.MultipleData
@{
    ViewBag.Title = "Đăng ký gói tập";
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <title>Đăng Ký Gói Tập</title>
    <link href="~/css/goitap.css" rel="stylesheet" />
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/img/favicon.ico" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
    <!-- Thêm thư viện jQuery -->
</head>
<body>
    <div class="wrapper">
        <div class="title">
            Đăng Ký Gói Tập
        </div>
        <form method="post" action="ThemDKGT">
            <div>
                <label>Tên Gói Tập</label>
                <select id="goiTap" name="id_GT">
                    @foreach (var item2 in Model.goiTap)
                    {
                        <option value="@item2.id_GT">@item2.TenGoiTap</option>
                    }
                </select>
            </div>
            <div>
                <label>Tên Hội Viên</label>
                <select id="hoiViens" name="id_HV">
                    @foreach (var item3 in Model.hoiViens)
                    {
                        <option value="@item3.id_HV">@item3.ThanhVien.TenTV</option>
                    }
                </select>
            </div>
            <div class="field">
                <input type="date" name="NgayBatDau">
                <label>Ngày bắt đầu</label>
            </div>
            <div class="field">
                <input type="date" name="NgayKetThuc">
                <label>Ngày kết thúc</label>
            </div>
            <div class="field">
                <input type="text" name="ThanhTien">
                <label>Thành Tiền</label>
            </div>
            <div class="field">
                <input type="submit" value="Thêm">
            </div>
            <div class="signup-link">
                <a href="/DangkyGoiTap/DKGT">Quay về trang chủ</a>
            </div>

        </form>
    </div>
</body>
</html>

