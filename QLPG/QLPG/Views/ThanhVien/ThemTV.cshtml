@model QLPG.Models.ThanhVien
@{
    ViewBag.Title = "ThemTV";
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <title>Thêm Thành Viên</title>

    <link href="~/css/goitap.css" rel="stylesheet" />
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/img/favicon.ico" />
</head>
<body>
    <div class="wrapper">
        <div class="title">
            Thêm Thành Viên
        </div>
        <form method="post" action="ThemTV">
            <div style="text-align: center; color: royalblue; height: 100px">
                <label>Chọn phần tập</label>
                <div class="field">
                    <select class="form-control" name="TenGT" style="width: 300px; height: 40px;">
                        <option>Treadmill Exercise</option>
                        <option>Cycling</option>
                        <option>Functional Training</option>
                    </select>
                </div>
            </div>

            <div class="field">
                <input type="text" name="TenTV">
                <label>Tên thành viên</label>
            </div>
            <div class="field">
                <input type="text" name="SDT">
                <label>Số điện thoại</label>
            </div>
            <div class="field">
                <input type="text" name="Email">
                <label>Email</label>
            </div>

            <div class="field">
                <input type="submit" value="Thêm">
            </div>
            <div class="signup-link">
                <a href="/ThanhVien/ThanhVien">Quay về</a>
            </div>
        </form>
    </div>
</body>
</html>

